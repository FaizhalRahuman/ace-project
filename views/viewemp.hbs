        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>PHONE</th>
                <th>ADDRESS</th>`
                <th>ROLE</th>
                <th>SALARY</th>
                <th>EXPERIENCE</th>
                </tr>

            </thead>
            <tbody>
                {{#each empdetails}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{phone}}</td>
                    <td>{{address}}</td>
                    <td>{{role}}</td>
                    <td>{{salary}}</td>
                    <td>{{exp}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </body>
</html>