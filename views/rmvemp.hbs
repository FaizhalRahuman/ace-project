<html>
    <head>
        <style>
            table{
                width:100%;
                border-collapse: collapse;
            }
            table,th,td{
                border:2px solid black;
            }
            th,td{
                padding:20px;
                text-align:center;
            }
            th{
                background-color: #f2f2f2;
            }
            td{
                font-size: larger;
                font-weight: bold;
            }
            button{
                height: 45px;
                width:80px;
            }
        </style>

    </head>
    <body>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NAME</th>
                    <th>ROLE</th>
                    <th>Remove Employee</th>
                </tr>
            </thead>
            <tbody>
                {{#each empdetails}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{role}}</td>
                    <td><form action="/users/delete/{{id}}" method="post"><button type="submit" onclick="reload()" >Remove</button></form></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </body>
</html>

<script>
 function reload() {
  setTimeout(function() {
    location.reload();
  }, 1000);
}

</script>